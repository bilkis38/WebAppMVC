@model WebMVC.Models.Attendance
@{
    ViewData["Title"] = "Attendance Details";
}

<h2>Attendance Details</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Participant</dt>
            <dd class="col-sm-8">@Model.Student?.Name</dd>
            
            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Student?.Email</dd>
            
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Date)</dt>
            <dd class="col-sm-8">@Model.Date.ToString("dddd, dd MMMM yyyy")</dd>
            
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-8">
                @if (Model.Status == "Present")
                {
                    <span class="badge bg-success">@Model.Status</span>
                }
                else if (Model.Status == "Sick")
                {
                    <span class="badge bg-warning text-dark">@Model.Status</span>
                }
                else if (Model.Status == "Permission")
                {
                    <span class="badge bg-info text-dark">@Model.Status</span>
                }
                else
                {
                    <span class="badge bg-danger">@Model.Status</span>
                }
            </dd>
            
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Note)</dt>
            <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Note) ? "-" : Model.Note)</dd>
        </dl>
        
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>