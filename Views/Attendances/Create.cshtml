@model WebMVC.Models.Attendance
@{
    ViewData["Title"] = "Add New Attendance";
}

<h2>Add New Attendance</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="StudentId" class="form-label"></label>
                <select asp-for="StudentId" class="form-select" asp-items="ViewBag.Participants">
                    <option value="">-- Select Participant --</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select" asp-items="ViewBag.StatusList">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Note" class="form-label"></label>
                <textarea asp-for="Note" class="form-control" rows="3" placeholder="Note (optional)"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}