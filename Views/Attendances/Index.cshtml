@model IEnumerable<WebMVC.Models.Attendance>
@{
    ViewData["Title"] = "Attendance List";
}

<h2>Daftar Kehadiran</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Pilih Kehadiran Baru</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time</th> <!-- ← TAMBAHIN KOLOM TIME -->
            <th>Participant</th>
            <th>Email</th>
            <th>Status</th>
            <th>Note</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("dd/MM/yyyy")</td> <!-- ← DATE ONLY -->
                <td>@item.Date.ToString("HH:mm")</td> <!-- ← TIME ONLY -->
                <td>@item.Student?.Name</td>
                <td>@item.Student?.Email</td>
                <td>
                    @if (item.Status == "Present")
                    {
                        <span class="badge bg-success">Present</span>
                    }
                    else if (item.Status == "Absent")
                    {
                        <span class="badge bg-danger">Absent</span>
                    }
                    else if (item.Status == "Sick")
                    {
                        <span class="badge bg-warning">Sick</span>
                    }
                    else if (item.Status == "Permission")
                    {
                        <span class="badge bg-info">Permission</span>
                    }
                </td>
                <td>@item.Note</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>