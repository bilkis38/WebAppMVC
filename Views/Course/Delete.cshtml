@model WebMVC.Models.Course
@{
    ViewData["Title"] = "Hapus Course";
}

<div class="container mt-4">
    <h2>Hapus Course</h2>
    <h3>Apakah Anda yakin ingin menghapus course ini?</h3>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-3"><strong>Nama Course</strong></div>
                <div class="col-md-9">@Model.CourseName</div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3"><strong>Kode Course</strong></div>
                <div class="col-md-9">@Model.CourseCode</div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="row mb-2">
                    <div class="col-md-3"><strong>Deskripsi</strong></div>
                    <div class="col-md-9">@Model.Description</div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Instructor))
            {
                <div class="row mb-2">
                    <div class="col-md-3"><strong>Instruktur</strong></div>
                    <div class="col-md-9">@Model.Instructor</div>
                </div>
            }

            <div class="row mb-2">
                <div class="col-md-3"><strong>Jumlah Peserta</strong></div>
                <div class="col-md-9">@(Model.Students?.Count ?? 0) peserta</div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Hapus</button>
        <a asp-action="Index" class="btn btn-secondary">Kembali</a>
    </form>
</div>