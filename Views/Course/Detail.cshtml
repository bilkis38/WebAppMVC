@model WebMVC.Models.Course

@{
    ViewData["Title"] = "Detail Course";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.CourseName</h3>
            <small>Kode: @Model.CourseCode</small>
        </div>
        
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Informasi Course</h5>
                    <table class="table table-borderless">
                        <tr>
                            <td width="150"><strong>Nama Course:</strong></td>
                            <td>@Model.CourseName</td>
                        </tr>
                        <tr>
                            <td><strong>Kode:</strong></td>
                            <td>@Model.CourseCode</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.Instructor))
                        {
                            <tr>
                                <td><strong>Instruktur:</strong></td>
                                <td>@Model.Instructor</td>
                            </tr>
                        }
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <tr>
                                <td><strong>Deskripsi:</strong></td>
                                <td>@Model.Description</td>
                            </tr>
                        }
                        <tr>
                            <td><strong>Jumlah Peserta:</strong></td>
                            <td><span class="badge bg-primary">@(Model.Enrollments?.Count ?? 0) Peserta</span></td>
                        </tr>
                    </table>
                </div>
            </div>

            <hr>

            <div class="mb-3">
                <h5>Daftar Peserta</h5>
            </div>

            @if (Model.Enrollments != null && Model.Enrollments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>No</th>
                                <th>Nama</th>
                                <th>Email</th>
                                <th>Nomor Telepon</th>
                                <th>Status</th>
                                <th>Nilai</th>
                                <th class="text-center">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int no = 1; }
                            @foreach (var enrollment in Model.Enrollments)
                            {
                                <tr>
                                    <td>@no</td>
                                    <td>@enrollment.Student.Name</td>
                                    <td>@(enrollment.Student.Email ?? "-")</td>
                                    <td>@(enrollment.Student.PhoneNumber ?? "-")</td>
                                    <td>
                                        @if (enrollment.Status == "Active")
                                        {
                                            <span class="badge bg-success">@enrollment.Status</span>
                                        }
                                        else if (enrollment.Status == "Completed")
                                        {
                                            <span class="badge bg-primary">@enrollment.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@enrollment.Status</span>
                                        }
                                    </td>
                                    <td>@(enrollment.Grade?.ToString() ?? "-")</td>
                                    <td class="text-center">
                                        <a asp-controller="Student" asp-action="Details" asp-route-id="@enrollment.Student.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-controller="Enrollment" asp-action="Edit" asp-route-id="@enrollment.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="Enrollment" asp-action="Delete" asp-route-id="@enrollment.Id" class="btn btn-sm btn-danger" onclick="return confirm('Yakin ingin hapus enrollment @enrollment.Student.Name dari course ini?')">
                                            <i class="bi bi-x-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                                no++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Belum ada peserta di course ini. Silakan tambah peserta baru dari halaman daftar course.
                </div>
            }
        </div>

        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit Course
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Kembali ke Daftar
            </a>
        </div>
    </div>
</div>