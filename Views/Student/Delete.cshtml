@model WebMVC.Models.Student
@{
    ViewData["Title"] = "Hapus Siswa";
}

<div class="container mt-4">
    <h2>Hapus Siswa</h2>
    <h3>Apakah Anda yakin ingin menghapus siswa ini?</h3>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-3"><strong>Nama</strong></div>
                <div class="col-md-9">@Model.Name</div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3"><strong>Email</strong></div>
                <div class="col-md-9">@(Model.Email ?? "-")</div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3"><strong>Nomor Telepon</strong></div>
                <div class="col-md-9">@(Model.PhoneNumber ?? "-")</div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3"><strong>Alamat</strong></div>
                <div class="col-md-9">@(Model.Address ?? "-")</div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3"><strong>Course</strong></div>
                <div class="col-md-9">
                    @if (Model.Course != null)
                    {
                        <span>@Model.Course.CourseName</span>
                    }
                    else
                    {
                        <span>Belum terdaftar di course</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Hapus</button>
        <a asp-action="Index" class="btn btn-secondary">Kembali</a>
    </form>
</div>