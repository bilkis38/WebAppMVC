@model WebMVC.Models.Student
@{
    ViewData["Title"] = "Detail Siswa";
}

<div class="container mt-4">
    <h2>Detail Siswa</h2>

    <dl class="row">
        <dt class="col-sm-3">Nama</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@(Model.Email ?? "-")</dd>

        <dt class="col-sm-3">Nomor Telepon</dt>
        <dd class="col-sm-9">@(Model.PhoneNumber ?? "-")</dd>

        <dt class="col-sm-3">Alamat</dt>
        <dd class="col-sm-9">@(Model.Address ?? "-")</dd>

        @* COURSE LAMA (One-to-Many) *@
        @if (Model.Course != null)
        {
            <dt class="col-sm-3">Course (Relasi Lama)</dt>
            <dd class="col-sm-9">
                <text>@Model.Course.CourseName (@Model.Course.CourseCode)</text>
                <br />
                <a asp-controller="Course" asp-action="Detail" asp-route-id="@Model.Course.Id" class="btn btn-sm btn-info mt-2">
                    Lihat Detail Course
                </a>
            </dd>
        }
    </dl>

    @* ENROLLMENTS BARU (Many-to-Many) *@
    <h3 class="mt-4">Daftar Course yang Diambil (Enrollments)</h3>
    @if (Model.Enrollments != null && Model.Enrollments.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Course</th>
                    <th>Kode</th>
                    <th>Tanggal Daftar</th>
                    <th>Status</th>
                    <th>Nilai</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model.Enrollments)
                {
                    <tr>
                        <td>@enrollment.Course?.CourseName</td>
                        <td>@enrollment.Course?.CourseCode</td>
                        <td>@enrollment.EnrollmentDate.ToString("dd MMM yyyy")</td>
                        <td>
                            @if (enrollment.Status == "Active")
                            {
                                <span class="badge bg-success">@enrollment.Status</span>
                            }
                            else if (enrollment.Status == "Completed")
                            {
                                <span class="badge bg-primary">@enrollment.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@enrollment.Status</span>
                            }
                        </td>
                        <td>@(enrollment.Grade?.ToString("0.00") ?? "-")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Belum ada enrollment.</p>
        <p>
            <a asp-controller="Enrollment" asp-action="Create" class="btn btn-primary">
                Daftarkan ke Course
            </a>
        </p>
    }

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Kembali ke Daftar</a>
    </div>
</div>