@model IEnumerable<WebMVC.Models.Student>

@{
    ViewData["Title"] = "Daftar Siswa";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Tambah Siswa</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Email</th>
            <th>Nomor Telepon</th>
            @* <th>Course</th> *@
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@(student.Email ?? "-")</td>
                <td>@(student.PhoneNumber ?? "-")</td>
                <td>
                    @* Tampilkan course lama ATAU enrollments baru *@
                    @* @if (student.Course != null) *@
                    {
                        @* <span class="badge bg-secondary">@student.Course.CourseName</span> *@
                    }
                    @if (student.Enrollments != null && student.Enrollments.Any())
                    @* { *@
                        @* @foreach (var enrollment in student.Enrollments) *@
                        @* { *@
                            @* <span class="badge bg-success">@enrollment.Course?.CourseName</span> *@
                        @* } *@
                    @* } *@
                    @* @if (student.Course == null && (student.Enrollments == null || !student.Enrollments.Any())) *@
                    {
                        @* <span class="text-muted">Belum terdaftar</span> *@
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-info">Detail</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>