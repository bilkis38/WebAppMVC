@model IEnumerable<WebMVC.Models.Enrollment>

@{
    ViewData["Title"] = "Daftar Enrollment";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Tambah Enrollment
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Student</th>
                        <th>Course</th>
                        <th>Tanggal Daftar</th>
                        <th>Status</th>
                        <th>Nilai</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int no = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@no</td>
                                <td>@item.Student?.Name</td>
                                <td>@item.Course?.CourseName</td>
                                <td>@item.EnrollmentDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (item.Status == "Active")
                                    {
                                        <span class="badge bg-success">@item.Status</span>
                                    }
                                    else if (item.Status == "Completed")
                                    {
                                        <span class="badge bg-primary">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                                <td>@(item.Grade?.ToString("0.00") ?? "-")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Detail
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Hapus
                                    </a>
                                </td>
                            </tr>
                            no++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">Belum ada data enrollment</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>