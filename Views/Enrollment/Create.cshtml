@model WebMVC.Models.Enrollment

@{
    ViewData["Title"] = "Tambah Enrollment";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus-fill"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label">
                                <i class="bi bi-person"></i> Pilih Student <span class="text-danger">*</span>
                            </label>
                            <select asp-for="StudentId" class="form-select" asp-items="ViewBag.Students">
                                <option value="">-- Pilih Student --</option>
                            </select>
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label">
                                <i class="bi bi-book"></i> Pilih Course <span class="text-danger">*</span>
                            </label>
                            @if (ViewBag.SelectedCourseId != null)
                            {
                                <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Courses" disabled>
                                    <option value="">-- Pilih Course --</option>
                                </select>
                                <input type="hidden" asp-for="CourseId" value="@ViewBag.SelectedCourseId" />
                                <small class="text-muted">
                                    <i class="bi bi-info-circle"></i> Course sudah dipilih otomatis dari halaman Course
                                </small>
                            }
                            else
                            {
                                <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Courses">
                                    <option value="">-- Pilih Course --</option>
                                </select>
                            }
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EnrollmentDate" class="form-label">
                                <i class="bi bi-calendar"></i> Tanggal Daftar <span class="text-danger">*</span>
                            </label>
                            <input asp-for="EnrollmentDate" type="date" class="form-control" />
                            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">
                                <i class="bi bi-check-circle"></i> Status <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="Active">Active</option>
                                <option value="Completed">Completed</option>
                                <option value="Dropped">Dropped</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Grade" class="form-label">
                                <i class="bi bi-award"></i> Nilai
                            </label>
                            <input asp-for="Grade" type="number" step="0.01" min="0" max="100" class="form-control" placeholder="Opsional (0-100)" />
                            <span asp-validation-for="Grade" class="text-danger"></span>
                            <small class="text-muted">Kosongkan jika nilai belum tersedia</small>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Kembali
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Simpan
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}