@model WebMVC.Models.Enrollment

@{
    ViewData["Title"] = "Edit Enrollment";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="StudentId" />
                        <input type="hidden" asp-for="CourseId" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label class="form-label">Student</label>
                            <input type="text" class="form-control" value="@Model.Student?.Name" disabled />
                            <small class="text-muted">Student tidak bisa diubah</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Course</label>
                            <input type="text" class="form-control" value="@Model.Course?.CourseName" disabled />
                            <small class="text-muted">Course tidak bisa diubah</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EnrollmentDate" class="form-label"></label>
                            <input asp-for="EnrollmentDate" type="date" class="form-control" />
                            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="Active">Active</option>
                                <option value="Completed">Completed</option>
                                <option value="Dropped">Dropped</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Grade" class="form-label"></label>
                            <input asp-for="Grade" type="number" step="0.01" min="0" max="100" class="form-control" />
                            <span asp-validation-for="Grade" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Kembali
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}